{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "checkJs": false
  },
  "include": [
    "resources/js/**/*.js",
    "resources/js/**/*.ts",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public",
    "storage",
    "bootstrap/cache",
  ]
}
